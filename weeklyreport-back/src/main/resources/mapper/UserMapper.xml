<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caac.weeklyreport.biz.user.mapper.UserMapper">
    <select id="selectAll" resultType="com.caac.weeklyreport.biz.user.entity.User">
        SELECT * FROM user WHERE deleted = '0'
    </select>

    <select id="login" resultType="com.caac.weeklyreport.biz.user.entity.User">
        SELECT * FROM user WHERE phone_no = #{phoneNo} AND is_deleted = '0'
    </select>
</mapper>
